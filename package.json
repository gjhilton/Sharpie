{
	"name": "sharpie",
	"private": true,
	"version": "1.2.3",
	"type": "module",
	"scripts": {
		"dev": "vite --config src/config/vite.config.js",
		"dev:host": "vite --config src/config/vite.config.js --host --port 8080",
		"build": "vite build --config src/config/vite.config.js",
		"lint": "eslint . --config src/config/eslint.config.js",
		"preview": "vite preview --config src/config/vite.config.js",
		"format": "prettier --write --config src/config/.prettierrc --ignore-path src/config/.prettierignore '**/*.{js,jsx,json,css,md}' '!src/artwork/**'",
		"storybook": "storybook dev -p 6006 -c src/config/storybook",
		"build-storybook": "storybook build -c src/config/storybook -o dist/storybook-static",
		"test": "vitest --config src/config/vitest.config.js",
		"test:run": "vitest run --config src/config/vitest.config.js",
		"test:watch": "vitest watch --config src/config/vitest.config.js",
		"test:coverage": "vitest run --coverage --config src/config/vitest.config.js",
		"test:e2e": "playwright test --config src/config/playwright.config.js",
		"test:e2e:ui": "playwright test --config src/config/playwright.config.js --ui",
		"test:e2e:headed": "playwright test --config src/config/playwright.config.js --headed",
		"test:e2e:codegen": "playwright codegen http://localhost:5175/Sharpie/",
		"update-db": "node src/scripts/update-db.js",
		"prepare": "husky src/config/.husky"
	},
	"lint-staged": {
		"*.js": [
			"eslint --config src/config/eslint.config.js --fix",
			"prettier --write --config src/config/.prettierrc --ignore-path src/config/.prettierignore"
		],
		"*.{json,md,css}": [
			"prettier --write --config src/config/.prettierrc --ignore-path src/config/.prettierignore"
		],
		"src/artwork/**/*": []
	},
	"dependencies": {
		"@formspree/react": "^3.0.0",
		"@tanstack/react-router": "^1.139.3",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-markdown": "^10.1.0",
		"react-simple-keyboard": "^3.8.122"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/js": "^9.36.0",
		"@pandacss/dev": "^1.4.0",
		"@peterek/vite-plugin-favicons": "^2.1.0",
		"@playwright/test": "^1.56.1",
		"@storybook/addon-a11y": "^9.1.10",
		"@storybook/addon-docs": "^9.1.10",
		"@storybook/addon-onboarding": "^9.1.10",
		"@storybook/addon-vitest": "^9.1.10",
		"@storybook/react-vite": "^9.1.10",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.3",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"babel-plugin-react-compiler": "^19.1.0-rc.3",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-storybook": "^9.1.10",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"jsdom": "^27.1.0",
		"lint-staged": "^16.2.6",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"prop-types": "^15.8.1",
		"storybook": "^9.1.10",
		"svg-path-properties": "^2.0.0",
		"vite": "^7.1.7",
		"vitest": "^3.2.4"
	}
}
